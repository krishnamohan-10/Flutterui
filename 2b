import 'package:flutter/material.dart'; void main() {

runApp(MaterialApp( home: Scaffold( body: Row(

mainAxisAlignment: MainAxisAlignment.center, children: [

Text("A "),

Text("B "),

Text("C"),

],

),

),

));

}

Column layout

import 'package:flutter/material.dart'; void main() {

runApp(MaterialApp( home: Scaffold( body: Column(

mainAxisAlignment: MainAxisAlignment.center, children: [

Text("A "),

Text("B "),

Text("C"),

],

),

),

));

}

Stack layout

import 'package:flutter/material.dart';

void main() {

runApp(MaterialApp( home: Scaffold( body: Center(

child: Stack(

alignment: Alignment.center, children: [

Container( width: 200,

height: 200,

color: Colors.amber,

Container( width: 150,

height: 150,

color: Colors.red,

),

Container( width: 100,

height: 100,

color: Colors.blue,

),

Container( width: 50,

height: 50,

color: Colors.green,

),

],

),

),

),

));
}
