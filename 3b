void main() {

runApp(MaterialApp( home: Scaffold(

appBar: AppBar(title: Text("Simple Responsive UI")), body: Center(

child: Builder( builder: (context) {

double screenWidth = MediaQuery.of(context).size.width; double screenHeight = MediaQuery.of(context).size.height; return Container(

width: screenWidth * 0.8, // 80% of screen width height: screenHeight * 0.3, // 30% of screen height color: Colors.blue,

child: Center( child: Text(

"I adapt to any screen!",

style: TextStyle(color: Colors.white, fontSize: 20), textAlign: TextAlign.center,

),

),

);

},

),

),

),

));

}
